pipeline {
   agent any
    
   tools{
        
         dockerTool 'docker'
    }
   
    environment {
                 
        registry = "mdshafi/sampledockerapp" 
        registryCredential = 'dockerhub'      
        
    }

   stages{
   
           stage("Checkout code") {
            steps {
                checkout scm
                
            }
        }   
      
          stage("Build image") {
            steps {
                script {
                    myapp = docker.build("mdshafi/sampledockerapp:${env.BUILD_ID}")
                }
            }
        }
      
      
  
        
      
      
      
      
   }   
}
